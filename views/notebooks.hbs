{{#if notebooks}}
<div class="content_notebook">
  {{#each notebooks}}
  <div class="card">
    <div class="card-image">
      <img src="{{img}}" title="{{title}}">
    </div>
    <div class="card-content">
      <span class="card-title">{{title}}</span>
      <p>{{descr}}</p>
      <b class="price">{{price}}</b>
    </div>
    <div class="card-action">
      <a href="/notebooks/{{id}}">Details</a>
      {{#if @root.isAuth}}
      {{#ifFunc userId._id @root.reqId}}
      <a href="/notebooks/{{id}}/edit?allow=true">Edit</a>
      {{/ifFunc}}
      <form action="/card/add" method="POST">
        <input type="hidden" name="id" value="{{id}}">
        <button onclick="M.toast({html: 'Adding notebook in card'})" class="waves-effect waves-light btn">Buy</button>
      </form>
      {{/if}}
    </div>
  </div>
  {{/each}}
</div>
{{else}}
<div class="mt-100">
  <div class="row bascket">
    <div class="col-md-12">
      <div class="card bascket">
        <div class="card-body cart">
          <div class="col-sm-12 empty-cart-cls text-center">
            <img src="https://i.imgur.com/dCdflKN.png" width="130" height="130" class="img-fluid mb-4 mr-3" />
            <h3><strong>Your Cart is Empty</strong></h3>
            <h4>Add something to make me happy :)</h4>
            <a href="/notebooks" class="btn btn-primary cart-btn-transform m-3" data-abc="true">continue shopping</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{/if}}