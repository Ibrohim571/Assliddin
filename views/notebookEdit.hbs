<h4>{{notebook.title}}</h4>
<form action="/notebooks/edit" method="POST" class="z-depth-4 f_control">
  <div class="input-field">
    <input type="text" id="title" class="validate" name="title" value="{{notebook.title}}" required />
    <label for="title">Notebooks model</label>
    <span class="helper-text" data-error="Enter Noutbook name"></span>
  </div>
  <div class="input-field">
    <input type="number" id="price" class="validate" name="price" value="{{notebook.price}}" required min="1" />
    <label for="price">Price</label>
    <span class="helper-text" data-error="Enter Price"></span>
  </div>
  <div class="input-field">
    <input type="text" id="img" class="validate" name="img" value="{{notebook.img}}" required />
    <label for="img">URL Image</label>
    <span class="helper-text" data-error="Enter Noutbook name"></span>
  </div>
  <div class="input-field">
    <input id="descr" class="validate" name="descr" value="{{notebook.descr}}" required />
    <span class="helper-text" data-error="Enter Description"></span>
  </div>
  <input type="hidden" name="id" value="{{notebook.id}}">
  <button class="btn btn-primary">Edit notebook</button>
</form>
<form class="removeNotebook" action="/notebooks/remove" method="post">
  <input type="hidden" name="id" value="{{notebook.id}}">
  <button class="waves-effect waves-light btn">Remove Notebook</button>
</form>