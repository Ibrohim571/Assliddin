<h4>Basket</h4>

{{#if notebook.length}}
<div id="card">
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>price</th>
        <th>count</th>
        <th>action</th>
      </tr>
    </thead>
    <tbody>
      {{#each notebook}}
      <tr>
        <td>{{title}}</td>
        <td>{{price}}</td>
        <td>{{count}}</td>
        <td><button class="btn btn-small js-remove material-icons" data-id="{{_id}}">delete_forever</button>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  <h5>Price: <span class="price">{{price}}</span></h5>
  <form action="/orders" method="post">
    <button class="waves-effect waves-light btn">Order</button>
  </form>
</div>
{{else}}
<div class="mt-100">
  <div class="row bascket">
    <div class="col-md-12">
      <div class="card bascket">
        <div class="card-body cart">
          <div class="col-sm-12 empty-cart-cls text-center">
            <img src="https://i.imgur.com/dCdflKN.png" width="130" height="130" class="img-fluid mb-4 mr-3" />
            <h3><strong>Your Cart is Empty</strong></h3>
            <h4>Add something to make me happy :)</h4>
            <a href="/notebooks" class="btn btn-primary cart-btn-transform m-3" data-abc="true">continue shopping</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{/if}}